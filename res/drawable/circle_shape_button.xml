<?xml version="1.0" encoding="utf-8"?>
<!-- 这条表明你画的是个圆 -->
<!-- 圆的半径 -->
<!-- 这条必须写，如果不写圆将无法显示，一般为false -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:innerRadius="20dip"
    android:shape="oval"
    android:useLevel="false" >
	
    <!-- 当type为radial的时候才用的属性：gradientRadius -->
    <gradient
        android:endColor="#A0CEE8"
        android:gradientRadius="25"
        android:startColor="#0042AAE7"
        android:type="radial"
        android:useLevel="false" />

</shape>