		        <com.whyun.activity.component.MyButton android:text="Tab" keyboard:keyname="Tab" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="|" keyboard:keyname="|" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="CapsLock" keyboard:keyname="CapsLock" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="Enter" keyboard:keyname="Enter" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="？" keyboard:keyname="？" android:padding="1dip" /> 
	        </TableRow>
		</TableLayout>
		<TableLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" android:stretchColumns="*">
		    <TableRow android:gravity="left">        
				<com.whyun.activity.component.MyButton android:text=" Ctrl " keyboard:keyname=" Ctrl " android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text=" Alt " keyboard:keyname=" Alt " android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="PgUp" keyboard:keyname="PgUp" android:padding="1dip" />         
		        <com.whyun.activity.component.MyButton android:text="PgDn" keyboard:keyname="PgDn"  android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="Insert" keyboard:keyname="Insert" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="Delete" keyboard:keyname="Delete" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text="Home" keyboard:keyname="Home" android:padding="1dip" /> 
		        <com.whyun.activity.component.MyButton android:text=" End " keyboard:keyname=" End " android:padding="1dip" />	        
	        </TableRow>
		</TableLayout>
		<TableLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" android:stretchColumns="*">
		    <TableRow android:gravity="left">
				<com.whyun.activity.component.MyButton android:text="空格" keyboard:keyname="空格" android:padding="1dip" />
				<com.whyun.activity.component.MyButton android:text="向上" keyboard:keyname="向上" android:padding="1dip" />
		        <com.whyun.activity.component.MyButton android:text="向下" keyboard:keyname="向下" android:padding="1dip" />
		        <com.whyun.activity.component.MyButton android:text="向左" keyboard:keyname="向左" android:padding="1dip" />
		        <com.whyun.activity.component.MyButton android:text="向右" keyboard:keyname="向右" android:padding="1dip" />
	        </TableRow>
		</TableLayout>
		
	</LinearLayout>	
